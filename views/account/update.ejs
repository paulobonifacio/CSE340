<main class="login-container">
  <h1>Update Account</h1>
  
  <% if (message) { %>
    <div class="alert alert-success"><%= message %></div>
  <% } %>
  
  <% if (errors) { %>
    <div class="alert alert-danger">
      <ul>
        <% errors.forEach(error => { %>
          <li><%= error %></li>
        <% }) %>
      </ul>
    </div>
  <% } %>

  <div class="login-panel">
    <h2>Account Information</h2>
    <form action="/account/update" method="post">
      <input type="hidden" name="account_id" value="<%= accountData.account_id %>">
      
      <div class="form-group">
        <label for="account_firstname">First Name:</label>
        <input type="text" id="account_firstname" name="account_firstname" required
               class="form-control" value="<%= accountData.account_firstname %>">
      </div>
      
      <div class="form-group">
        <label for="account_lastname">Last Name:</label>
        <input type="text" id="account_lastname" name="account_lastname" required
               class="form-control" value="<%= accountData.account_lastname %>">
      </div>
      
      <div class="form-group">
        <label for="account_email">Email Address:</label>
        <input type="email" id="account_email" name="account_email" required
               class="form-control" value="<%= accountData.account_email %>">
      </div>
      
      <div>
        <button type="submit" class="login-btn">Update Account</button>
      </div>
    </form>
  </div>

  <div class="login-panel" style="margin-top: 20px;">
    <h2>Change Password</h2>
    <form action="/account/update-password" method="post">
      <input type="hidden" name="account_id" value="<%= accountData.account_id %>">
      
      <div class="form-group">
        <label for="new_password">New Password</label>
        <input type="password" id="new_password" name="account_password" required
               class="form-control">
      </div>
      
      <div class="password-hint">
        Passwords must be minimum of 12 characters and include 1 capital letter, 1 number and 1 special character.
      </div>
      
      <button type="button" class="show-password-btn">Show Password</button>
      
      <div>
        <button type="submit" class="login-btn">Change Password</button>
      </div>
    </form>
  </div>
</main>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const showPasswordBtn = document.querySelector('.show-password-btn');
    const passwordField = document.getElementById('new_password');
    
    if (showPasswordBtn && passwordField) {
      showPasswordBtn.addEventListener('click', function() {
        if (passwordField.type === 'password') {
          passwordField.type = 'text';
          showPasswordBtn.textContent = 'Hide Password';
        } else {
          passwordField.type = 'password';
          showPasswordBtn.textContent = 'Show Password';
        }
      });
    }
  });
</script>